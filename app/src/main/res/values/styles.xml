<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="TabButton">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:minWidth">44dp</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/tab_tintcolor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TireBorad">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/board_minwidth</item>
        <item name="android:minHeight">@dimen/board_minheight</item>
    </style>

s
    <style name="SettingLabel">
        <item name="android:layout_margin">@dimen/common_margin_half</item>
        <item name="android:minWidth">@dimen/button_minwidth</item>
        <item name="android:textSize">@dimen/text_normal2</item>
        <item name="android:textColor">@color/text_green</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_margin">@dimen/common_margin_half</item>
        <item name="android:background">@drawable/radio_background</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/button_minheight</item>
        <item name="android:minWidth">@dimen/button_minwidth</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/tab_tintcolor</item>
    </style>

    <style name="SeekBarHintPopupAnimation">
        <item name="@android:windowEnterAnimation">@null</item>
        <item name="@android:windowExitAnimation">@null</item>
    </style>

</resources>
