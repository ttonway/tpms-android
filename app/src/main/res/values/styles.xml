<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabButton">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:minWidth">44dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tab_tintcolor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/radio_background</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tab_tintcolor</item>
    </style>

    <style name="SeekBarHintPopupAnimation">
        <item name="@android:windowEnterAnimation">@null</item>
        <item name="@android:windowExitAnimation">@null</item>
    </style>

</resources>
